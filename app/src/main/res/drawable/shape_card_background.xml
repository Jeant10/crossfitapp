<!-- cardview_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo del CardView -->
    <solid android:color="@color/white" /> <!-- Cambia @color/white al color que desees -->

    <!-- Borde del CardView -->
    <stroke
        android:width="1dp"
    android:color="@color/black" />
    <!-- Esquinas redondeadas del CardView -->
    <corners
        android:radius="16dp" /> <!-- Radio de las esquinas en dp -->

</shape>