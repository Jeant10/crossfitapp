<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gym_image"
    tools:context=".coach.HomeCoachFragment">

    <ImageView
        android:id="@+id/iconIv"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/logocrossfit" />

    <TextView
        android:id="@+id/welcomeTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iconIv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Bienvenido a la Crossfit App"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/welcomeMessageTv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeTitleTv"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textStyle="bold"
        android:text="Bienvenido al panel de entrenador.\nAquí podrás visualizar las asistencias de todos los miembros.\n¡Adelante!"
        android:textColor="#414535"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_italic"
        android:textAlignment="center" />

</RelativeLayout>